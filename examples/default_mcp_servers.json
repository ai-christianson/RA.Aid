{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "taskmaster-ai": {
      "command": "npx",
      "args": ["-y", "--package=task-master-ai", "task-master-ai"],
      "env": {
        "MODEL": "claude-3-5-sonnet-20240620",
        "PERPLEXITY_MODEL": "sonar-medium-online",
        "MAX_TOKENS": "64000",
        "TEMPERATURE": "0.2",
        "DEFAULT_SUBTASKS": "5",
        "DEFAULT_PRIORITY": "medium"
      }
    }
    },
    "tree_sitter": {
      "command": "python",
      "args": [
        "-m",
        "mcp_server_tree_sitter.server"
      ]
    }
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i", // Interactive for stdio
        "--rm", // Remove container on exit
        "-e", "GITHUB_PERSONAL_ACCESS_TOKEN", // Expect token in env
        "ghcr.io/github/github-mcp-server"
      ]
      // Assumes GITHUB_PERSONAL_ACCESS_TOKEN is set in the environment running docker
      // We will rely on RA.Aid having GITHUB_TOKEN and docker inheriting it.
      // The server inside docker should pick up GITHUB_PERSONAL_ACCESS_TOKEN.
    }
  }
}
